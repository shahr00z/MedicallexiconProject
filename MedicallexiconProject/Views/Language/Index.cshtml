@using MedicallexiconProject.Helpers
@using MedicallexiconProject.ViewModel
@model IEnumerable<LanguageViewModel>

<div class="right">
    <h3>Language List</h3>
</div>
<p>
    <a href="~/" id="btnBack" class="btn btn-group">Back to Home Page
    </a>
</p>
<table class="table table-striped table-bordered table-condensed" dir="rtl">

    <tr class="webgrid-header">



        <th style="text-align: center">ID
        </th>
        <th style="text-align: center">Word
        </th>
        <th style="text-align: center">Word Count
        </th>
    </tr>
    @{
        int x = 0;
    }
    @foreach (LanguageViewModel item in Model)
    {
        <tr>
            <td style="text-align: center; width: 100px">
                <span class="badge badge-info">@Html.Raw(++x)</span>
            </td>
            <td style="text-align: center">
                @Html.ActionLink(linkText: item.Name, result: MVC.Word.GetWords().AddRouteValue("Language", item.Name.ToSeoUrl()))</td>
            <td style="text-align: center; width: 100px">
                @item.WordCount
            </td>
        </tr>
    }
</table>
